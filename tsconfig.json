{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "build",
    "preserveConstEnums": true
  },
  "include": ["src/**/*"]
}
